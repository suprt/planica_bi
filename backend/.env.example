# ============================================
# Planica BI - Environment Configuration
# ============================================
# Скопируйте этот файл в .env и заполните значения
# НЕ коммитьте файл .env с реальными секретами в git!

# --------------------------------------------
# Application
# --------------------------------------------
APP_NAME=PlanicaBI
APP_DEBUG=true
APP_KEY=your-random-app-key-here
APP_PORT=8080
APP_URL=http://localhost:8080
FRONTEND_URL=http://localhost:3000

# --------------------------------------------
# Database (MySQL)
# --------------------------------------------
# Для локальной разработки:
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=reports
DB_USERNAME=reports
DB_PASSWORD=your-secure-password-here

# Для Docker (внутри сети):
# DB_HOST=mysql

# --------------------------------------------
# Redis
# --------------------------------------------
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_CACHE_TTL=3600

# Для Docker:
# REDIS_HOST=redis

# --------------------------------------------
# JWT Authentication
# --------------------------------------------
# Сгенерируйте случайный секрет (минимум 32 символа)!
# Пример: openssl rand -base64 32
JWT_SECRET=your-jwt-secret-key-change-in-production
JWT_EXPIRY=24

# --------------------------------------------
# Ollama AI (для анализа метрик)
# --------------------------------------------
OLLAMA_API_KEY=
OLLAMA_API_URL=https://ollama.com/api
OLLAMA_MODEL=glm-4.6

# --------------------------------------------
# Yandex OAuth
# --------------------------------------------
YANDEX_CLIENT_ID=
YANDEX_CLIENT_SECRET=
YANDEX_OAUTH_TOKEN=
YANDEX_OAUTH_SCOPES=
YANDEX_DIRECT_SANDBOX=false
YANDEX_DIRECT_TEST_CLIENT_LOGIN=client_login
YANDEX_METRICA_TEST_COUNTER_ID=
YANDEX_DEFAULT_CURRENCY=RUB
DEFAULT_TIMEZONE=Europe/Moscow

# --------------------------------------------
# Logging
# --------------------------------------------
LOG_LEVEL=info
LOG_PATH=/root/storage/logs/app.log

# Log rotation (lumberjack)
LOG_MAX_SIZE=100        # Maximum size in MB before rotation
LOG_MAX_BACKUPS=3       # Maximum number of old log files to retain
LOG_MAX_AGE=28          # Maximum days to retain old log files
LOG_COMPRESS=true       # Enable gzip compression of rotated logs
