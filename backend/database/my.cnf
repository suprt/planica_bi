[mysqld]
# Character Set (critical for proper data storage)
character-set-server = utf8mb4
collation-server = utf8mb4_unicode_ci
init-connect = 'SET NAMES utf8mb4'

# Port inside container (always 3306). External port is configured via DB_PORT in docker-compose.yml
port = 3306

# Basic performance settings for MVP
max_connections = 100
innodb_buffer_pool_size = 256M

[mysql]
default-character-set = utf8mb4

[client]
default-character-set = utf8mb4
