# Application 
APP_NAME=PlanicaBI
APP_ENV=development
APP_PORT=8080
APP_URL=http://localhost:8080
APP_DEBUG=true
APP_TIMEZONE=Europe/Moscow

# Database (MySQL)
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=planica_bi
DB_USERNAME=
DB_PASSWORD=
DB_CHARSET=utf8mb4
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=5
DB_CONN_MAX_LIFETIME=5m

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_CACHE_TTL=3600

# Yandex OAuth
YANDEX_CLIENT_ID=
YANDEX_CLIENT_SECRET=
YANDEX_OAUTH_TOKEN=
YANDEX_OAUTH_REDIRECT_URL=http://localhost:8080/auth/yandex/callback

# Yandex API Settings
YANDEX_API_TIMEOUT=30s
YANDEX_API_RETRY_COUNT=3
YANDEX_API_RETRY_DELAY=5s
YANDEX_DEFAULT_CURRENCY=RUB

# JWT Authentication
JWT_SECRET_KEY=change-this-secret-key
JWT_ACCESS_TOKEN_EXPIRE=15m
JWT_REFRESH_TOKEN_EXPIRE=7d
JWT_ISSUER=planica_bi
